<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.androidwithkotlin.FirstActivity"
    android:id="@+id/firstLayout"
    >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="50dp"
        android:orientation="horizontal"/>

    <ImageView
        android:background="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_marginBottom="-50dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/main_title_tv_in_first"
        android:padding="10dp"
        android:text="MAIN TITLE"
        android:background="#90FFFFFF"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sub_title_tv_in_first"
        android:padding="5dp"
        android:background="#90FFFFFF"
        android:text="SUB TITLE SUB TITLE SUB TITLE SUB TITLE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title_tv_in_first"/>

    <TextView
        android:id="@+id/content_tv_in_first"
        android:text="content"
        android:background="#90FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
